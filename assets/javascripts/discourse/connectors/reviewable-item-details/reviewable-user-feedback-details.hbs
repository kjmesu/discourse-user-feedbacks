<div style="background: yellow; padding: 10px; margin: 10px 0;">
  <h4>DEBUG INFO:</h4>
  <div>outletArgs keys: {{#each-in @outletArgs as |key value|}}{{key}}, {{/each-in}}</div>
  <div>reviewable exists: {{if @outletArgs.reviewable "YES" "NO"}}</div>
  <div>reviewable.type: {{@outletArgs.reviewable.type}}</div>
  <div>reviewable.payload exists: {{if @outletArgs.reviewable.payload "YES" "NO"}}</div>
</div>

{{#if (eq @outletArgs.reviewable.type "ReviewableUserFeedback")}}
  <div class="post-contents-wrapper">
    <div class="reviewable-user-feedback-info">
      <div class="feedback-meta">
        <div><strong>Feedback ID:</strong> #{{@outletArgs.reviewable.payload.feedback_id}}</div>
        <div><strong>User ID:</strong> {{@outletArgs.reviewable.payload.user_id}}</div>
        <div><strong>About User ID:</strong> {{@outletArgs.reviewable.payload.feedback_to_id}}</div>

        {{#if @outletArgs.reviewable.payload.rating}}
          <div class="feedback-rating">
            <strong>Rating:</strong> {{@outletArgs.reviewable.payload.rating}}/5 stars
          </div>
        {{/if}}

        {{#if @outletArgs.reviewable.payload.review}}
          <div class="feedback-review">
            <strong>Review:</strong>
            <div class="feedback-review-text">
              {{@outletArgs.reviewable.payload.review}}
            </div>
          </div>
        {{/if}}

        {{#if @outletArgs.reviewable.payload.reason}}
          <div class="flag-reason">
            <strong>Flag Reason:</strong>
            <span class="reason-badge">{{@outletArgs.reviewable.payload.reason}}</span>
          </div>
        {{/if}}

        {{#if @outletArgs.reviewable.payload.message}}
          <div class="flag-message">
            <strong>Additional Details:</strong>
            <div class="flag-message-text">
              {{@outletArgs.reviewable.payload.message}}
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
{{/if}}
